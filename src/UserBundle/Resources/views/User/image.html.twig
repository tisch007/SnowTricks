{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                {% include 'UserBundle:User:modulesUsed/utilisateursConnecte.html.twig' %}
            </div>
            <div class="col-xs-9">
                <div class="row">
                    <div class="col-sm-4">
                        <h2>Mon Avatar</h2>
                    </div>
                    <div class="col-sm-8">
                        {% if not userImages is empty %}
                            <div class="panel text-center">
                                <img src="{{ asset('uploads/avatar/' ~  userImages[0].imageName) }}"
                                     alt="Avatar de L'utilisateur" width="200"
                                     height="200"/>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="well">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        {{ form_errors(form) }}
                        <fieldset>
                            <br>
                            <div class="form-group">
                                {{ form_label(form.imageFile, 'Image', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                                <div class="col-md-7">
                                    {{ form_widget(form.imageFile) }}
                                </div>
                                <div class="col-md-2">
                                    <button class="btn btn-primary" type="submit">Enregistrer</button>
                                </div>
                                <div class="col-md-10 col-md-offset-3">
                                    {{ form_errors(form.imageFile) }}
                                </div>
                            </div>
                        </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
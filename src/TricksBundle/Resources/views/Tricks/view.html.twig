{% extends "base.html.twig" %}

{% block titre %}{{ trick.title }}{% endblock %}
{% block description %}{{ trick.content }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row text-center">
            <div class="span8">
                <h2>{{ trick.title }}</h2>

                </br>
                <em>Ajouté par : <strong>{{ trick.author }}</strong> le : {{ trick.dateAjout|date('d/m/Y à H:i') }}<br>
                dans la catégorie <strong>{{ trick.category.name }}</strong></em></p>

                {{ trick.content }}
                </br>

            </div>
            <div class="span4">
                <h4>image</h4>
                <img src="{{ asset('img/image1.jpg') }}" alt="image1" width="300" height="150" class="img-circle img-responsive">
            </div>
        </div>
        <div class="span12">
            <div class="row">
                <h3 class="text-center">Video</h3>
                <!-- Start WOWSlider.com BODY section --> <!-- add to the <body> of your page -->
                <div id="wowslider-container1">
                    <div class="ws_images">
                        <ul>
                            {% set i = 0 %}
                            {% for video in listVideo %}
                                <li>
                                    <iframe width="100%" height="100%"
                                            src="https://www.youtube.com/embed/{{ video.link }}?autoplay=0&rel=0&enablejsapi=1&playerapiid=ytplayer&wmode=transparent"
                                            frameborder="0" allowfullscreen></iframe>
                                    <img src="http://img.youtube.com/vi/{{ video.link }}/0.jpg"
                                         alt="{{ video.name }}"
                                         title="{{ video.name }}" id="wows1_{{ i }}"/></li>
                                {% set i = i+1 %}
                            {% endfor %}
                            {% for image in listImage %}
                                <li><img src="{{ asset('img/' ~  image.imageName) }}" alt="{{ image.imageName }}"
                                         title="{{ image.imageName }}" id="wows1_{{ i }}"/></li>
                                {% set i = i+1 %}
                            {% endfor %}

                            <div class="ws_bullets">
                                <div>
                                    {% set i = 0 %}
                                    {% for video in listVideo %}
                                        <a href="#" title="{{ video.name }}"><span>{{ i }}</span></a>
                                        {% set i = i+1 %}
                                    {% endfor %}
                                    {% for image in listImage %}
                                        <a href="#" title="{{ image.imageName }}"><span>{{ i }}</span></a>
                                        {% set i = i+1 %}
                                    {% endfor %}
                                </div>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="offset8 span4">
            <div class="row">
                <br>
                <br>
            <a href="{{ path('tricks_homepage') }}" class="btn btn-default"><i
                        class="icon-chevron-left"></i>&nbspRetour</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-warning" href="{{ path('tricks_edit', { 'id' : trick.id }) }}"><i
                            class="icon-pencil"></i>&nbsp Modifier</a>
                <a class="btn btn-danger" href="{{ path('tricks_delete', { 'id' : trick.id }) }}"><i
                            class="icon-trash"></i>&nbsp Supprimer</a>
            {% endif %}
            </div>
        </div>
        <div class="span12">
            <div class="row">
                <h3>Commentaire</h3>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% include 'TricksBundle:form:commentForm.html.twig' %}
                    </br>
                {% endif %}
                <ul>
                    {% for comment in listComment %}
                        <li>
                            Rédigé par : {{ comment.author }} le : {{ comment.dateAjout|date('d/m/Y à H:i') }}
                            </br>
                            {{ comment.content }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="{{ asset('js/engine1/wowslider.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/engine1/script.js') }}"></script>
{% endblock %}

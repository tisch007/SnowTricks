</head>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('tricks_homepage') }}">SnowTricks</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('tricks_add') }}">Ajouter une figure</a></li>
                {% endif %}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('fos_user_profile_show') }}"><span
                                    class="glyphicon glyphicon-user"></span>&nbspProfile</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}"><span
                                    class="glyphicon glyphicon-log-out"></span>&nbspDÃ©connection</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_registration_register') }}"><span
                                    class="glyphicon glyphicon-user"></span>&nbspInscription</a></li>
                    <li><a href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-log-in"></span>&nbspConnection</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
    </div>
</nav>

{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="container panel-success ">
                <div class="panel-heading">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
<br>

{% block body %}{% endblock %}

<footer id="footer" class="panel-footer">
    <div class="container text-center">
        <div class="row">
            <div class="col-sm-4">
                <h4>Nos partenaires</h4>
                <p><a href="https://www.snow-concept.com" style="color:black;"><span
                                class="icon-shopping-cart">&nbsp&nbsp;snow-concept.com</span></a></p>
                <p><a href="https://www.laglisse.com" style="color:black;"><span
                                class="icon-shopping-cart">&nbsp&nbsp;laglisse.com</span></a></p>
                <p><a href="https://www.snowinn.com" style="color:black;"><span class="icon-shopping-cart">&nbsp&nbsp;snowinn.com</span></a>
                </p>
            </div>

            <div class="col-sm-4">
                <a href="{{ path('tricks_homepage') }}"><img src="{{ asset('img/image3.jpg') }}" alt="Snowtricks"
                                 class="center-block img-rounded img-responsive" style="margin-top: 15px"></a>
                <p>&copy; Copyright {{ "now"|date('Y') }} - SnowTricks</p>
            </div>

            <div class="col-sm-4">
                <h4>Nous contacter</h4>
                <p><i class="icon-phone"></i>&nbsp;Tel: 0637556424</p>
                <p><i class="icon-envelope"></i>&nbsp;Mail: snowtricks@gmail.com</p>
            </div>
        </div>
    </div>
</footer>


{% block javascripts %}{% endblock %}
</body>
</html>